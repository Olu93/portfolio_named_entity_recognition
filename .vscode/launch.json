    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Adapter",
            "type": "debugpy",
            "request": "launch",
            "module": "adapter.ootb.${fileBasenameNoExtension}",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/src"
        },
        {
            "name": "Run Sliding Window",
            "type": "debugpy",
            "request": "launch",
            "module": "adapter.naive.sliding_window",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/src"
        },
        {
            "name": "Run Spacy",
            "type": "debugpy",
            "request": "launch",
            "module": "adapter.ootb.spacy",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/src"
        },
        {
            "name": "Run Hugging Face",
            "type": "debugpy",
            "request": "launch",
            "module": "adapter.ootb.huggingface",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/src"
        },
        {
            "name": "Run LLM",
            "type": "debugpy",
            "request": "launch",
            "module": "adapter.ootb.llm",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/src"
        }
